<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conversationListCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="14dp"
    android:paddingBottom="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FAF8F4"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="6dp"
    android:layout_marginHorizontal="18dp">

    <android.widget.FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

        <ImageView
            android:id="@+id/userProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/background_circle"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_friendName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chatname"
            android:textColor="@color/dark"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="@font/lunasima"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/userProfileImage"
            app:layout_constraintTop_toTopOf="@id/userProfileImage"
            app:layout_constraintEnd_toStartOf="@id/tv_time_stamp"
            android:maxLines="1"
            android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/iv_check_delivered_icl"
                app:layout_constraintTop_toTopOf="@id/tv_friendName"
                android:maxLines="1"
                android:text="MM:DD\nHH:MM" />

        <TextView
            android:id="@+id/tv_message_iml"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#B3B1B1"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/tv_friendName"
            app:layout_constraintTop_toBottomOf="@id/tv_friendName"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Message" />

        <ImageView
            android:id="@+id/iv_check_sent_icl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_check_delivered_icl"
            android:visibility="visible"
            android:src="@drawable/outline_check_small_24"/>

        <ImageView
            android:id="@+id/iv_check_delivered_icl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible"
            android:src="@drawable/outline_check_small_24"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#90C595"
        android:layout_gravity="bottom" />
    </android.widget.FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>